<source>
  @type forward
  port 19000
  bind 0.0.0.0
</source>

<match **>
  @type file
  format single_value
  append true
  # 受信したデータを出力ファイル
  path /var/log/cron_echo/cron-echo.log
  # 日単位に出力
  time_slice_format %Y-%m-%d
  <buffer>
    # バッファタイプはファイル
    @type file
    # バッファファイルの出力先
    path /var/log_buffer/cron-echo
    flush_mode interval
    # 60sごとにファイルに書き出す
    flush_interval 60s
  </buffer>
</match>
